scenario AddScalaPom should add pom.xml

given
  Empty

when
  AddScalaPom group_id="com.things", artifact_id="automate-all"

then
  fileExists "pom.xml"
	and fileContains "pom.xml" "artifactId>automate-all</artif"
	and fileContains "pom.xml" "groupId>com.things</group"

scenario AddScalaPom should add target to .gitignore

  given
    Empty

  when
    AddScalaPom group_id="com.things", artifact_id="automate-all"

  then
    fileExists ".gitignore"
  	and fileContains ".gitignore" "target/"
